<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004d40"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:id="@+id/constr"
    >


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:layout_marginBottom="100dp"
        android:drawablePadding="40dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:shadowColor="#4527a0"
        android:text="Press to start!"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#E60E57"
        android:textColorLink="#4AE91E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/we"
        app:layout_constraintVertical_bias="0.687" />

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the correct age of death which she is supposed to guess in the space below"
        android:textColor="#09F0DA"
        android:textColorHighlight="#F79608"
        android:textColorHint="#46F74D"
        android:textColorLink="#e91e63"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/we"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="100dp"
        android:inputType="number"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:textColor="#69E96F"
        android:textColorHighlight="#EC1150"
        android:textColorHint="@android:color/holo_orange_light"
        android:textColorLink="#24F10B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t" />


</android.support.constraint.ConstraintLayout>